all: shared_lib


FC = gfortran
FFLAGS = -O3 -fPIC

CC = gcc
CFLAGS = -O3 -fPIC


OBJLIBS =
#LIBS =  -llapack -lblas
LIBS =  /usr/lib/liblapack.so.3 /usr/lib/libblas.so.3

EXPOKIT   = expokit.o

MATAID    = mataid.o

OBJS      = fortran_stop_handler.o clock.o $(EXPOKIT) $(MATAID) $(OBJLIBS)

.f.o:;  $(FC) $(FFLAGS) -c $<

fortran_stop_handler.o: ../../fortran_stop_handler.c
	$(CC) $(CFLAGS) -c -o fortran_stop_handler.o ../../fortran_stop_handler.c


# Figure out OS and architecture
OS = $(shell uname)
ifeq ($(OS), MINGW32_NT-6.1)
  OS=WINNT
endif

# file extensions
ifeq ($(OS), WINNT)
  SHLIB_EXT = dll 
else ifeq ($(OS), Darwin)
  SHLIB_EXT = dylib
else
  SHLIB_EXT = so
endif


shared_lib: libexpokit.$(SHLIB_EXT)

libexpokit.$(SHLIB_EXT): $(OBJS)
	$(FC) $(OBJS) -rdynamic -shared -o $@  $(LIBS)

clean:
	rm -f *.o *.$(SHLIB_EXT)

